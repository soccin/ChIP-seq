#!/bin/bash

module load java/jdk-17.0.10

PICARDJAR=/lila/home/socci/Code/Picard/jar/2.25.5/picard.jar

COMMAND=$1
shift 1

if [ "$COMMAND" == "" ]; then
    java -jar $PICARDJAR 2>&1 | less -R
    exit
fi

if [ "$COMMAND" == "LSF" ]; then
    BSUB=YES
    COMMAND=$1
    shift
else
    BSUB=NO
fi

TDIR=/scratch/socci
if [ -e /fscratch ]; then
    TDIR=/fscratch/socci
fi

mkdir -p $TDIR

if [ "$BSUB" == "YES" ]; then

    bsub -o LSF.PIC/ -J PIC_${COMMAND}_$$ -R "rusage[mem=10]" -n 3 -W 359 \
        java -Xmx23g -Djava.io.tmpdir=$TDIR -XX:ParallelGCThreads=2 -XX:ConcGCThreads=2 \
            -jar $PICARDJAR $COMMAND TMP_DIR=$TDIR VALIDATION_STRINGENCY=SILENT $*

else

    java -Xmx23g -Djava.io.tmpdir=$TDIR -XX:ParallelGCThreads=2 -XX:ConcGCThreads=2 \
        -jar $PICARDJAR $COMMAND TMP_DIR=$TDIR VALIDATION_STRINGENCY=SILENT $*

fi

